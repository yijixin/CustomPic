<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_ruler"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.chinaoly.cp.RulerActivity">

    <com.chinaoly.cp.view.ScalePanel
        android:id="@+id/scalePanel"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:background="#CECECE"/>

    <com.chinaoly.cp.view.RulerView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="50dp"
        app:textSize="14px"
        app:dateTimeSize="18px"
        android:background="@color/color_bg"
        app:colorBg="@color/color_bg"
        app:colorKeDu="@color/color_kedu"
        app:colorMiddleLine="@color/color_middle_line"
        app:colorTimeBg="@color/color_time_bg"
        />

</LinearLayout>
